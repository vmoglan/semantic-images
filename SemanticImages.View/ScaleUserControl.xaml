<UserControl x:Class="SemanticImages.View.ScaleUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SemanticImages.View"
             xmlns:vm="clr-namespace:SemanticImages.Presentation.ViewModel;assembly=SemanticImages.Presentation"
             d:DataContext="{d:DesignInstance Type=vm:ScaleUserControlViewModel, IsDesignTimeCreatable=True}"
             mc:Ignorable="d" Width="240" Height="50">
    <Grid>
        <Label Content="Scale:
               " HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top"/>
        <TextBox HorizontalAlignment="Left" Height="23" Margin="105,13,0,0" TextWrapping="Wrap" 
                 VerticalAlignment="Top" Width="125" RenderTransformOrigin="0.869,0.94"
                 Text="{Binding Scale}"/>

    </Grid>
</UserControl>
