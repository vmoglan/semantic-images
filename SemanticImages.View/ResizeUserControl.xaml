<UserControl x:Class="SemanticImages.View.ResizeUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SemanticImages.View"
             xmlns:vm="clr-namespace:SemanticImages.Presentation.ViewModel;assembly=SemanticImages.Presentation"
             d:DataContext="{d:DesignInstance Type=vm:ResizeUserControlViewModel, IsDesignTimeCreatable=True}"
             mc:Ignorable="d" Height="80" Width="200">
    <Grid>
        <TextBox HorizontalAlignment="Left" Height="23" Margin="63,13,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="127"
                 Text="{Binding Width}"/>
        <Label Content="Width:" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top"/>
        <TextBox HorizontalAlignment="Left" Height="23" Margin="63,46,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="127"
                 Text="{Binding Height}"/>
        <Label Content="Height:" HorizontalAlignment="Left" Margin="10,42,0,0" VerticalAlignment="Top"/>
    </Grid>
</UserControl>
