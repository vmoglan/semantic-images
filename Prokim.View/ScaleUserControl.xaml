<UserControl x:Class="Prokim.View.ScaleUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Prokim.View"
             xmlns:vm="clr-namespace:Prokim.Presentation.ViewModels;assembly=Prokim.Presentation"
             d:DataContext="{d:DesignInstance Type=vm:ScaleUserControlViewModel, IsDesignTimeCreatable=True}"
             mc:Ignorable="d" Width="200" Height="80">
    <Grid>
        <Label Content="Scale:
               " HorizontalAlignment="Left" Margin="10,26,0,0" VerticalAlignment="Top" Width="50"/>
        <TextBox HorizontalAlignment="Left" Height="23" Margin="65,30,0,0" TextWrapping="Wrap" 
                 VerticalAlignment="Top" Width="125" RenderTransformOrigin="0.869,0.94"
                 Text="{Binding Scale}"/>

    </Grid>
</UserControl>
